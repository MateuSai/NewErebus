{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "icon_path": {
            "type": "string",
            "description": "Path to the item icon"
        },
        "width": {
            "type": "integer",
            "minimum": 1
        },
        "height": {
            "type": "integer",
            "minimum": 1
        },
        "capacity": {
            "type": "integer",
            "minimum": 1
        }
    },
    "required": [
        "icon_path",
        "width",
        "height"
    ]
}